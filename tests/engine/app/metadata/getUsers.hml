---
kind: Command
version: v1
definition:
  name: getUsers
  outputType: "[User!]!"
  arguments:
    - name: email
      type: Int32
      description: Filter by user email address
    - name: id
      type: Int32
      description: Filter by user ID
  source:
    dataConnectorName: myapi
    dataConnectorCommand:
      function: getUsers
  graphql:
    rootFieldName: getUsers
    rootFieldKind: Query
  description: Get all available users

---
kind: CommandPermissions
version: v1
definition:
  commandName: getUsers
  permissions:
    - role: admin
      allowExecution: true

